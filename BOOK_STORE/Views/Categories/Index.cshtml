@model List<Category>


@if (!Model.Any())
{
     <div class="card-body">
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
            No data found
        </div>
    </div>
}

else
{
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Name</th>
                    <th style="width:250px">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Edit</a>
                            <a class="btn btn-sm btn-success  " asp-controller="Categories" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i> Details</a>
                            <a class="btn btn-sm btn-danger js-delete" data-id="@item.Id" href="#"><i class="fas fa-trash"></i> Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}